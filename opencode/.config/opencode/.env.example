# OpenCode Local LLM Integration - Environment Variables
# Copy this file to .env and adjust values as needed

# ============================================================================
# Ollama Configuration
# ============================================================================

# Ollama server URL
OLLAMA_URL=http://localhost:11434

# Ollama API key (usually "ollama" or empty)
OLLAMA_API_KEY=ollama

# Ollama models
OLLAMA_MANAGER_MODEL=qwen3:30b
OLLAMA_CODER_MODEL=qwen3-coder:30b

# Ollama performance settings
OLLAMA_NUM_THREAD=8
OLLAMA_NUM_GPU=1
OLLAMA_KEEP_ALIVE=5m

# ============================================================================
# LM Studio Configuration
# ============================================================================

# LM Studio server URL
LMSTUDIO_URL=http://localhost:1234

# LM Studio API key
LMSTUDIO_API_KEY=lm-studio

# LM Studio models
LMSTUDIO_VISION_MODEL=qwen/qwen3-vl-30b

# LM Studio performance settings
LMSTUDIO_NUM_THREAD=8
LMSTUDIO_KEEP_ALIVE=5m

# ============================================================================
# OpenCode Configuration
# ============================================================================

# OpenCode config directory
OPENCODE_CONFIG_DIR=/Users/danielramirez/.config/opencode

# OpenCode theme
OPENCODE_THEME=catppuccin

# OpenCode logging
OPENCODE_LOG_LEVEL=info
OPENCODE_ENABLE_LOGGING=true

# ============================================================================
# Model Parameters
# ============================================================================

# Context window size (tokens)
MODEL_CONTEXT_WINDOW=24000

# Maximum tokens per response
MODEL_MAX_TOKENS=2048

# Temperature settings
MANAGER_TEMPERATURE=0.0
CODER_TEMPERATURE=0.0
VISION_TEMPERATURE=0.3

# Top-P (nucleus sampling)
MODEL_TOP_P=0.9

# Top-K (top-k sampling)
MODEL_TOP_K=40

# ============================================================================
# Performance Settings
# ============================================================================

# Request timeout (milliseconds)
REQUEST_TIMEOUT=120000

# Retry attempts
RETRY_ATTEMPTS=3

# Retry delay (milliseconds)
RETRY_DELAY=1000

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=1

# Enable streaming responses
ENABLE_STREAMING=true

# ============================================================================
# MCP Server Configuration
# ============================================================================

# Docker MCP server
MCP_DOCKER_ENABLED=true

# BrowserOS MCP server
MCP_BROWSER_ENABLED=true

# ============================================================================
# Monitoring & Debugging
# ============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Performance log file
PERFORMANCE_LOG_FILE=/Users/danielramirez/.config/opencode/performance.log

# Enable debug logging
DEBUG=false

# Verbose output
VERBOSE=false

# ============================================================================
# Advanced Settings
# ============================================================================

# Model quantization level
# Options: Q3_K_M, Q4_K_M, Q5_K_M
MODEL_QUANTIZATION=Q4_K_M

# Enable memory mapping
ENABLE_MMAP=true

# Enable GPU acceleration
ENABLE_GPU=true

# Connection keep-alive
CONNECTION_KEEP_ALIVE=true

# Request batching
ENABLE_BATCHING=true

# Response caching
ENABLE_CACHING=false

# ============================================================================
# Backup & Recovery
# ============================================================================

# Backup directory
BACKUP_DIR=/Users/danielramirez/.config/opencode/backups

# Auto-backup interval (hours)
AUTO_BACKUP_INTERVAL=24

# Keep backups (number of versions)
KEEP_BACKUPS=10

# ============================================================================
# Integration Settings
# ============================================================================

# Enable agent routing
ENABLE_AGENT_ROUTING=true

# Enable tool calling
ENABLE_TOOL_CALLING=true

# Enable MCP servers
ENABLE_MCP=true

# ============================================================================
# Notes
# ============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Adjust values based on your system
# 3. Restart OpenCode after making changes
# 4. Check logs for any configuration errors
# 5. Use VERIFICATION_TESTS.sh to validate setup
